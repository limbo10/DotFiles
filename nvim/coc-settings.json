{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "makdown",
    "ts",
    "json",
    "js"
  ],

  // Highlight (LightBulb)
  "colors.enable": true,

  // LSP
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "clangd": {
      "command": "clangd",
      "rootPatterns": ["compile_flags.txt", "compile_commands.json"],
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
    },
    "lua": {
      "command": "lua",
      "filetypes": ["lua"]
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    }
  }
}
