{
    "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "java", "python"],
    "coc.preferences.formatOnTypeFiletypes": ["css", "markdown", "java", "python"],

    "prettier.formatterPriority": 1,

    "html.format.wrapLineLength": 80,
    "html.autoClosingTags": true,
    "html.format.endWithNewline": true,
    "html.format.indentInnerHtml": true,
    "html.format.indentHandlebars": true,


    "snippets.priority": 1,

    "pairs.enableBackspace": true,

    "javascript.autoClosingTags": true,
    "typescript.autoClosingTags": true,
    "javascript.suggestionActions.enabled": false,
    "typescript.suggestionActions.enabled": false,

    "pairs.enableCharacters": [
        "(",
        "[",
        "{",
        "'",
        "\"",
        "`"
    ],

    "clangd.fallbackFlags": [
      "-std=c++17"
    ],
    "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd"
}
